{
  "include": ["./src/bin", "./src/plugin"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,

    "rootDirs": ["./src/bin", "./src/plugin"],
    "outDir": "./dist",
    "types": ["node", "jest"]
  }
}
