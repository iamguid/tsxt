{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "skipLibCheck": true,
        "lib": [
            "ES2020",
        ],
        "jsx": "preserve",
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "dist",
        "composite": true,
        "strict": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}